{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/**/env.d.ts",
    "src/renderer/**/**/*",
    "src/renderer/**/**/*.vue",
    "src/preload/*.d.ts",
    "src/main/**/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@preload/*": [
        "src/preload/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
    }
  }
}
